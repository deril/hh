%section{ class: "image_list_wrap#{' m-92-top' unless @cur_tag.presence || @search_tags.present? }" }

  - # TODO: BAD - may be yield
  - if @cur_tag.presence
    %h2= "Current tag: #{@cur_tag.name.capitalize}"
  - elsif @search_tags.present?
    %h2= "Current tag: #{@search_tags.map{|tag| tag.capitalize}.join(', ')}"

  - if imgs.present?
    %ul.image-list__block
      - imgs.each do |img|
        %li= link_to image_tag(img.image.url(:thumb)), image_path(img.id), class: "image_thumbs"
  - else
    No images present...

  = paginate imgs
